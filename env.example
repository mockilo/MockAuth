# MockAuth Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# Database Configuration
DB_TYPE=memory
# For PostgreSQL:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=mockauth
# DB_PASSWORD=your-password
# DB_DATABASE=mockauth
# DB_SSL=false

# For MySQL:
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=mockauth
# DB_PASSWORD=your-password
# DB_DATABASE=mockauth

# For SQLite:
# DB_TYPE=sqlite
# DB_PATH=./mockauth.db

# Security Configuration
ENABLE_MFA=true
ENABLE_PASSWORD_RESET=true
ENABLE_ACCOUNT_LOCKOUT=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for password reset)
EMAIL_PROVIDER=console
# For SendGrid:
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=noreply@yourdomain.com

# SSO Configuration
ENABLE_SSO=false
# Google OAuth:
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth:
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Microsoft OAuth:
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=info
AUDIT_RETENTION_DAYS=90

# Webhook Configuration
ENABLE_WEBHOOKS=false
# WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_URL=https://your-app.com/webhooks/auth

# Ecosystem Integration
ENABLE_MOCKTAIL=true
MOCKTAIL_PORT=3002
MOCKTAIL_SCHEMA_PATH=./schema.sql

ENABLE_SCHEMAGHOST=true
SCHEMAGHOST_PORT=3003
SCHEMAGHOST_DELAY=100
SCHEMAGHOST_ERROR_RATE=0.05

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=3004

# Development Tools
ENABLE_DEBUG_CONSOLE=true
DEBUG_PORT=3005
ENABLE_VISUAL_BUILDER=true
BUILDER_PORT=3007

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
